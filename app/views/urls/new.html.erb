<h1>Add a new URL</h1>

<%= form_for @shortened do |f| %>
<p>
  <%= f.label :url, "Your URL:" %>
  <%= f.text_field :url %>
</p>

<% if @shortened.errors[:url].any? %>
<p class="error-messages">
  The given url <%= @shortened.errors[:url].to_sentence %>.
</p>
<% end %>

<p class="buttons">
  <%= f.submit "Shorten my URL" %>
</p>

<% end %>
